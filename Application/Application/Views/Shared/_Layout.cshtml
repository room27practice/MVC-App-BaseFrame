<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - @Global.ApplicationName</title>
     <link rel="stylesheet" href="~/css/reseter.css" />
     <link rel="stylesheet" href="~/css~/css/typography.css" />  
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    
    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="@((ViewData["Title"]!=null && ViewData["Title"].Equals(Global.Titles.Home))?
                                "disabled btn btn-outline-secondary":"nav-link text-dark")" asp-area="" asp-controller="Home" asp-action="Index">@Global.ApplicationName</a>

                                <a class="@((ViewData["Title"]!=null && ViewData["Title"].Equals(Global.Titles.Products))?
                                "disabled btn btn-outline-secondary":"nav-link text-dark")" asp-area="" asp-controller="Products" asp-action="Index">AllProducts</a>

                                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                                        aria-expanded="false" aria-label="Toggle navigation">
                                    <span class="navbar-toggler-icon"></span>
                                </button>
                                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                                    <ul class="navbar-nav flex-grow-1">
                                        <li class="nav-item">
                                            <a class="@((ViewData["Title"]!=null && ViewData["Title"].Equals(Global.Titles.Home))?
                                "disabled btn btn-outline-secondary":"nav-link text-dark")" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                                        </li>
                                        <li class="nav-item">

                                            @if (ViewData["Title"] != null && ViewData["Title"].Equals(Global.Titles.Privacy))
                                            {
                                                <a class="disabled btn btn-outline-secondary" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                                            }
                                            else
                                            {
                                                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                                            }
                                        </li>
                                    </ul>
                                    @if (User.IsInRole(Global.AdminRoleName))
                                    {
                                        <a class="navbar-brand" asp-area="" asp-controller="Admin" asp-action="Index">Admin Panel</a>
                                    }
                                    <partial name="_LoginPartial" />
                                </div>
                            </div>
                        </nav>
                    </header>
                    <div class="container">
                        <main role="main" class="pb-3">
                            @RenderBody()
                        </main>
                    </div>

                    <footer class="border-top footer text-muted">
                        <div class="container">
                            &copy; 2021 - Application - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </div>
                    </footer>
                    <script src="~/lib/jquery/dist/jquery.min.js"></script>
                    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
                    <script src="~/js/site.js" asp-append-version="true"></script>
                    @await RenderSectionAsync("Scripts", required: false)
                </body>
            </html>
